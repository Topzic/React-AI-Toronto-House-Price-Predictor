<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta charset="utf-8" />
    <title>House Price Prediction</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container mt-5">
      <form method="GET" action="/run">
        <div class="form-group">
          <label for="bedrooms">Bedrooms:</label>
          <input
            type="number"
            class="form-control"
            id="bedrooms"
            name="bedrooms"
            required
          />
        </div>
        <div class="form-group">
          <label for="bathrooms">Bathrooms:</label>
          <input
            type="number"
            class="form-control"
            id="bathrooms"
            name="bathrooms"
            required
          />
        </div>
        <div class="form-group">
          <label for="sqft">Sqft:</label>
          <input
            type="number"
            class="form-control"
            id="sqft"
            name="sqft"
            required
          />
        </div>
        <div class="form-group">
          <label for="parking">Parking:</label>
          <input
            type="number"
            class="form-control"
            id="parking"
            name="parking"
            required
          />
        </div>
        <div class="form-group">
          <label for="houseType">House Type:</label>
          <input
            type="number"
            class="form-control"
            id="houseType"
            name="houseType"
            required
          />
        </div>
        <button type="submit" class="btn btn-primary">Predict</button>
      </form>

      <!-- Prediction Result Section -->
      <div class="mt-3" id="predictionResult" style="display: none">
        <h4>Prediction Result:</h4>
        <p id="predictionValue"></p>
      </div>
    </div>

    <script>
      // Function to handle form submission and display prediction result
      function predictHousePrice() {
        // Get form data
        const form = document.querySelector("form");
        const formData = new FormData(form);

        // Send form data to server
        fetch("/predictHousePrice?" + new URLSearchParams(formData))
          .then((response) => response.json())
          .then((data) => {
            // Display prediction result
            document.getElementById("predictionValue").textContent =
              data.prediction;
            document.getElementById("predictionResult").style.display = "block";
          })
          .catch((error) => console.error("Error:", error));
      }
    </script>
  </body>
</html>
